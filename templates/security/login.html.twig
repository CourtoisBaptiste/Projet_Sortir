{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('security_login') }}" method="POST">
        <div class="form-group">
            <input type="text" placeholder="Adresse mail" required name="_username">
        </div>

        <div class="form-group">
            <input type="password" placeholder="Password" required name="_password">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !</button>
        </div>
    </form>
{% endblock %}